{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
		"indent": ["error", "tab"],
		"quotes": ["error", "double", { "allowTemplateLiterals": false }],
		"no-tabs": "off",
		"no-mixed-spaces-and-tabs": "off",
		"brace-style": ["error", "stroustrup", { "allowSingleLine": true }],
		"no-plusplus": "off"
    }
}
